<script>

function centerDiagram() {

    var center1 = $('#center'),
    container = $('#container'),
    width = container.width(),
    height = container.height();


    var x = width/2 - center1.width()/2;
    var y = height/2 - center1.height()/2;
    var new_width = width/3;
    var new_height = height/3;


    center1.css({
        left: x + 'px',
        top: y + 'px'
    });

  //  Highcharts.chart(center1, chartOptions);
}

function createFields() {
    $('.field').remove();
    var container = $('#container');
    for(var i = 0; i < 4; i++) {
        $('<div/>', {
            'class': 'field',
            'text': i + 1
        }).appendTo(container);
    }
}

function distributeFields() {

    var fields = $('.field'), container = $('#container'),
        width = container.width(), height = container.height(),
        angle = 0, step = (2*Math.PI) / fields.length;
        var radius = container.width()/3;
    fields.each(function() {
        var x = Math.round(width/2 + radius * Math.cos(angle) - $(this).width()/2);
        var y = Math.round(height/2 + radius * Math.sin(angle) - $(this).height()/2);
        $(this).css({
            left: x + 'px',
            top: y + 'px'
        });
        angle += step;
    });
}

$('input').change(function() {
    createFields();
    distributeFields();
});

