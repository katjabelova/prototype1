  <col width="130">
  <col width="130">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
    </tr>
  </thead>
  <tbody>
    <!-- Elemente einer Set -->
    <tr>
      <th scope="row">1</th>
      <td>This is the first question:</td>
      <td>
        <form>
          <input type="text" name="username" id="textPart">
          number from ... to ...
          <button id="okButton">OK</button>
        </form>
    </td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>This is the second question:</td>
      <td>
        <select>
          <option value="volvo">Volvo</option>
          <option value="saab">Saab</option>
          <option value="vw">VW</option>
          <option value="audi" selected>Audi</option>
        </select>
      </td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>This is the third question:</td>
      <td>
        <select>
          <option value="volvo">Volvo</option>
          <option value="saab">Saab</option>
          <option value="vw">VW</option>
          <option value="audi" selected>Audi</option>
        </select>
      </td>
    </tr>
  </tbody>
</table>
