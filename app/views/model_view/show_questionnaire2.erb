<script>
var currentTab = 0;
showTab(currentTab);

function showTab(n) {
  document.getElementById("questionnaire_name").innerHTML = "Questionnaire"
  var tabs = document.getElementsByClassName("tab");
  tabs[n].style.display = "block";

  if (n == 0) {
    document.getElementById("prevBtn").style.display = "none";
  } else {
    document.getElementById("prevBtn").style.display = "inline";
  }
  if (n == (tabs.length - 1)) {
  //  window.alert("last - 1 tab");
    document.getElementById("nextBtn").innerHTML = "Submit";
  } else {
  //  window.alert("not last tab");
    document.getElementById("nextBtn").innerHTML = "Next";
  }

  calculateSteps(n)
}

function nextPrev(withStep) {
//  window.alert("nextPrev");
  var x = document.getElementsByClassName("tab");
  if (withStep == 1 && !validate()) return false;

  x[currentTab].style.display = "none";
  currentTab = currentTab + withStep;
  if (currentTab >= x.length) {
  //  window.alert("last submit");
  //  var tabToClose = document.getElementById("regForm");
  //  tabToClose.style.display = "none";
    var title = document.getElementById("questionnaire_name");
    title.innerHTML = "Submitting";
    document.getElementById("regForm").submit();
    return false;
  } else {
//    window.alert("not last submit");
    showTab(currentTab);
    return true;
  }
}

function validate() {
  var x, y, i, valid = true;
  x = document.getElementsByClassName("tab");
  y = x[currentTab].getElementsByTagName("input");

  for (i = 0; i < y.length; i++) {

    if (y[i].value == "" || parseFloat(y[i].value) < parseFloat(y[i].min) || parseFloat(y[i].value) > parseFloat(y[i].max)) {
      y[i].className += " invalid";
      valid = false;
    } else {
      y[i].className += "valid";
    }
  }

  if (valid) {
    document.getElementsByClassName("step")[currentTab].className += " finish";
  }
  return valid;
}

function calculateSteps(n) {
  var i, x = document.getElementsByClassName("step");
  for (i = 0; i < x.length; i++) {
    x[i].className = x[i].className.replace(" active", "");
  }
  x[n].className += " active";
}
</script>

