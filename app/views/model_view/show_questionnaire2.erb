  background-color: #bbbbbb;
}

.step {
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbbbbb;
  border: none;
  border-radius: 50%;
  display: inline-block;
  opacity: 0.5;
}

.step.active {
  opacity: 1;
}

.step.finish {
  background-color: #92a8d1;
}

#opens {
    background-color: LightGray;
    margin-top: 10px;
}
</style>
<body>
  <!-- Klasse, um Questionnaire-Data zu parsen und @stepCount zu setzen -->
<% if @question.length % 5 == 0
    @stepCount = @question.length / 5
   else
    @stepCount = (@question.length / 5).round + 1
   end
   puts "setCount: " + @stepCount.to_s
 %>
<!-- action="/finish_questionnaire"   -->
<form id="regForm" action="/finish_questionnaire" style="border-radius: 25px;">
  <h1 id="questionnaire_name">Questionnaire</h1>
<!-- Einzelne Sets nach @stepCount -->

<% for i in 0..@stepCount - 1 do %>
<div class="tab">
  <div class="form-group" >
<!--  <div class="form-group"> -->
<% @bound = i == 0 ? 0 : i*4 + 1 %>
<% puts "bound value: " + @bound.to_s %>
<% for j in @bound..@bound + 4 do %>
<% @element_question = @question[j] %>
<% if @element_question != nil %>
<% puts "elem-question: " + @element_question.to_s %>
<!--    <button type="button" class="btn btn-primary btn-block" id='opens'>Question <%= @element_question['order_number'] + 1 %></button> -->
    <label id="questionTitle"> <%= (@element_question['order_number'] + 1).to_s + ' ' + @element_question['question'] %> </label>
<!--    <div class="col-sm-10"> -->
    <div>
      <% if @element_question['answer_type'] == 'input' %>
      <input class="form-control" type="text" name="username" id="textPart" min="<%= @element_question['lower_bound'].to_f %>" max="<%= @element_question['upper_bound'].to_f %>" step="1.0">
      <% else %>
      <select>
        <% @element_question['answer_possibilities'].each do |answer| %>
        <option value="<%= answer %>"><%= answer %></option>
        <% end %>
      </select>
      <% end %>

    <% @subquestions_array = @tempQuestion.define_subquestions(@element_question['id']) %>
    <% @subquestions_array.each do |subquestion| %>
    </br>
    <label id="questionSubTitle"><%= (subquestion['order_number'] + 1).to_s + ' ' + subquestion['question'].to_s %></label>
