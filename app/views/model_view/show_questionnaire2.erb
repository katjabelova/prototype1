          <%= subquestion['answer_comment'] %>
    <% else %>
      <select>
        <% subquestion['answer_possibilities'].each do |answer| %>
        <option value="<%= answer %>"><%= answer %></option>
    <% end %>
      </select>
    <% end %>
  </div>
  <% end %>
  </div>
<!--  </div> -->
<% end %>
<% end %>
</div>
