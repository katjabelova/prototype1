    case 3:
      <% puts "in case 3" %>
  //    window.alert("agri: "+ in_budget_agriculture +"; non: " + in_budget_non_agriculture);
      var seriesData = [output_goal_achivement_public_goods()];
  //    window.alert("series data3: " + seriesData);
